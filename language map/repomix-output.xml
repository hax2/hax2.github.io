        ];

        // Run tests
        const outputDiv = document.getElementById('test-output');
        let testResults = '<h3>Test Results:</h3>';

        testCases.forEach((testCase, index) => {
            const result = makeWordsClickable(testCase.text, testCase.breakdown);
            testResults += `
